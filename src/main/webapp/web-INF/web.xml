<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- AdminServlet Configuration -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.courier.web.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- AddParcelServlet Configuration -->
    <servlet>
        <servlet-name>AddParcelServlet</servlet-name>
        <servlet-class>com.courier.web.AddParcelServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddParcelServlet</servlet-name>
        <url-pattern>/addParcel</url-pattern>
    </servlet-mapping>

</web-app>
